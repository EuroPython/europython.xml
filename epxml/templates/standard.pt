
<style type="text/css">
    .schedule td {
        vertical-align: top;
    }

    .schedule .metadata div {
        margin-bottom: 1em;
    }

    .schedule .information .title {
        font-weight: bold;
        font-size: 1.2em;
    }

    .schedule .speaker .name {
        font-weight: bold;
    }

    .schedule .description h1 {
        font-size: 1.0em;
    }
    .schedule .description h2 {
        font-size: 0.9em;
    }
    .schedule .description h3 {
        font-size: 0.8em;
    }
</style>

<table class="schedule" border="1">
    <tbody>
      {% for entry in entries %}
        <tr class="entry" data-entry-id="{{ entry.attrib['id']}}">
            <td class="metadata"> 
                <div class="category">{{ entry.category }} </div>
                <div class="audience"> {{ entry.audience }} </div>
                <div class="topics"> 
                    {% for topic in  entry.topics %} 
                        <span class="topic">{{ topic.topic }}</span>
                    {% endfor %}
                </div>
            </td>
            <td class="information"> 
                <div class="title">{{ entry.title }} </div>
                <div class="description">{{ view.markdown(entry.description)}} 
            </td>
            <td class="speakers"> 
                {% for speaker in  entry.speakers %} 
                   <div class="speaker" data-speaker-id="{{ speaker.speaker.attrib['id'] }}">
                        <div class="name">{{ speaker.speaker.name }}</div>
                        <div class="profile">{{ speaker.speaker.profile}}</div>
                    </div>
                {% endfor %}
            </td>
        </tr>  
      {% endfor %}
  </tbody>
</table>
