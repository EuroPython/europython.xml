<html lang="en">
    <head>
        <style type="text/css">
            @page {
                size: a4;
            }

            @page :left {
                padding-bottom: 8cm;
            }

            @page :right {
                padding-left: 10em;
            }

            .schedule-heading {
                font-size: 1.6em;
                font-weight: bold;
                column-span: 2;
            }

            .schedule-day {
                page-break-after: always;
                -ro-column-count: 3;
                column-count: 3;
                -column-width: 4cm;
                column-width: 4cm;
                font-family: Arial; 
                font-size: 10px;
            }

            .entry {
                border: 1px solid blue;
                margin-bottom: 1em;
            }    

            .entry .heading {
                page-break-inside: never;
                column-break-before: auto;
            }    

            .entry .text li {
                margin-left: -4em;
            }

            .entry .text li p {
                padding: 0;
                margin: 0;
            }

            .entry .text h1 {
                font-size: 1em;
            }

            .entry .text h2 {
                font-size: 0.9em;
            }

            .entry .text h3 {
                font-size: 0.8em;
            }

            .audience {
                color: blue;
            }

            .title {
                font-size: 1.2em;
                font-weight: bold;
            }
            .text {  
                text-align: justify;
                hyphens: auto;
                hyphenate-before: 2;
                hyphenate-after: 2;
                margin-bottom: 0.5em;
            }
            .entry .speaker {
                font-style: italic;
            }
        </style>
    </head>
    <body>
        <div class="schedule">
          {% for d in day_entries %}
            <div class="schedule-day">
                <div class="schedule-heading">{{ d.date_str }}</div>
                {% for entry in d.entries %}
                <div class="entry">
                      <div class="heading">
                          <div class="title">{{ entry.title }}</div>
                          <div class="audience">{{ entry.audience }}</div>
                          <div class="category">{{ entry.category }}</div>
                          <div class="room">{{ entry.room }}</div>
                          <div class="time">{{ view.time(entry) }}</div>
                          <div class="topics"> 
                                {% for topic in  entry.topics %} 
                                    <span class="topic">{{ topic.topic }}</span>
                                {% endfor %}
                          </div>
                      </div>
                      <div class="text entry-text">
                          {{ view.markdown(entry.description) }}
                      </div>    
                      {% if entry.speakers.getchildren() %}
                          <div class="speakers">
                            {% for speaker in entry.speakers%}  
                              <div class="speaker">{{ speaker.speaker.name }}</div>
                              <!--
                              <div class="text speaker-profile">{{ view.markdown(speaker.speaker.profile) }}</div>
                              -->
                            {% endfor %}
                          </div>
                      {% endif %}
                  </div>
                {% endfor %}
            </div>
          {% endfor %}
        </div>
    </body>
</html>
