<html lang="en">
    <head>
        <link rel="stylesheet" type="text/css" href="brochure.css" />
        <link rel="stylesheet" type="text/css" href="brochure_talks.css" />
        <style type="text/css">
            @page:first {
                -ro-counter-set: page {{ first_page_number }};
            }
        </style>
    </head>
    <body>

        {% if emptypage %}
            <div class="empty-page">
                Empty
                <br/>
                page
            </div>
        {% endif %}

        <div class="schedule">
          {% for d in day_entries %}
            <div class="schedule-day">
                <div class="schedule-heading">
                    <span class="date-iso">{{ d.date_str }}</span>
                    <span class="datetext">{{ d.date_text }}</span>
                </div>
                <div class="clearfix"></div>
                {% for entry in d.entries %}
                <div class="entry">
                      <div class="heading">
                          <div class="col-button">
                          <div class="title">{{ entry.title }}</div>
                          <div class="audience audience-{{view.lower(entry.audience) }}">{{ entry.audience }}</div>
                          <div class="category category-{{ view.lower(entry.category) }}">{{ entry.category }}</div>
                          <div class="topics"> 
                                {% for topic in  entry.topics %} 
                                    <span class="topic topic-{{ view.lower(topic.topic)}}">{{ topic.topic }}</span>
                                {% endfor %}
                          </div>
                          <div class="audience">{{ entry.audience }}</div>
                          </div>
                          <div class="clearfix"></div>
                          <div class="col-left">
                          <!--div class="time">{{ view.time(entry) }}</div-->
                          <div class="time">{{ view.time_duration(entry) }}</div>
                          <div class="room">{{ entry.room }}</div>
                          </div>
                          <div class="col-right">
                          <div class="h1">
                          <h1 class="title">{{ entry.title }}</h1>
                      </div>
                      <div class="text entry-text">
                          {{ view.markdown(entry.abstract ) }}
                      </div>    
                      {% if entry.speakers.getchildren() %}
                          <div class="speakers">
                            {% for speaker in entry.speakers%}  
                              <div class="speaker-name">{{ speaker.speaker.name }}</div>
                              <!--
                              <div class="speaker-description">{{ speaker.speaker.description }}</div>
                              <div class="text speaker-profile">{{ view.markdown(speaker.speaker.profile) }}</div>
                              -->
                            {% endfor %}
                          </div>
                      {% endif %}
                          </div>
                          </div>
                          <div class="clearfix"></div>
                      </div>
                      <div class="text entry-text">
                         <p> {{ view.markdown(entry.description) }}</p>
                      </div>    
                  </div>
                {% endfor %}
            </div>
          {% endfor %}
        </div>
    </body>
</html>
